<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blue_back"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="bclassTeacher.TeacherActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/title_teacher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5" 
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/btn_testExam"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.35"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_testexam" />

        <ImageButton
            android:id="@+id/btn_TToVote"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.35"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_vote" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:weightSum="1" >

        <ImageButton
            android:id="@+id/btn_TAdvice"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#00000000"
            android:layout_weight="0.35"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_advice" />

        <ImageButton
            android:id="@+id/btn_TBack"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#00000000"
            android:layout_weight="0.35"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_tquestion" />
    </LinearLayout>

</LinearLayout>
