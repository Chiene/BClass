<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky_back"
    tools:context="bclassMain.NewVoteActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_x="0dp"
        android:layout_y="63dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/voteTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/edit"
            android:drawablePadding="10dp"
            android:ems="10"
            android:textColorHint="#5e6472"
            android:hint="標題"
            android:padding="10dp" >

            <requestFocus /> 
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_x="0dp"
        android:layout_y="130dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/voteDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:gravity="left"
            android:textColorHint="#5e6472"
            android:hint="詳細資訊"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:weightSum="1"
        android:layout_x="0dp"
        android:layout_y="420dp" >

        <ImageButton
            android:id="@+id/voteOK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#00000000"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_check" />

        <ImageButton
            android:id="@+id/voteCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#00000000"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_cancel" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="1"
        android:layout_x="0dp"
        android:layout_y="305dp" >

        <TextView
            android:id="@+id/voteChoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:textSize="23sp"
            android:gravity="center"
            android:text="候選人幾位"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/spinnerChoice"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="1"
        android:layout_x="0dp"
        android:layout_y="375dp" >

        <TextView
            android:id="@+id/voteTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="23sp"
            android:text="持續時間"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/spinnerTime"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_x="0dp"
        android:layout_y="-3dp"
        android:src="@drawable/imgview_new_vote" />

</AbsoluteLayout>