<?xml version="1.0" encoding="utf-8"?>
<noteSystemStudent.NoteView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFF87"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.49"
        android:weightSum="10" >

        <TextView
            android:id="@+id/note_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/note_btn_edit_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:src="@drawable/custom_btn_orange" />

        <ImageButton
            android:id="@+id/note_btn_delete_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/custom_btn_orange" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/note_tv_user_message"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3.15"
        android:scrollHorizontally="true"
        android:scrollbars="vertical"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|end|fill_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/note_btn_create_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@drawable/custom_btn_orange" />

        <TextView
            android:id="@+id/note_tv_rabbit_count"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="1dp"
            android:text="0" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#ffffff" />

    <Button
        android:id="@+id/note_btn_get_rabbit"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:text="Me too" />

    <Button
        android:id="@+id/note_btn_disply_reply"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="5dp"
        android:text="查看留言" />

</noteSystemStudent.NoteView>